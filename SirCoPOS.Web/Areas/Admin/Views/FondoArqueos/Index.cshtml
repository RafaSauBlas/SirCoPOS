@model IEnumerable<SirCoPOS.DataAccess.SirCoPOS.FondoArqueo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FondoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuditorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Importe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reportado)
        </th>
        <th>Faltante</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FondoId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuditorId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @String.Format("{0:C}", item.Importe)
        </td>
        <td>
            @String.Format("{0:C}", item.Reportado)
        </td>
        <td>
            @String.Format("{0:C}", item.Importe - item.Reportado)
        </td>
        <td>
            @Html.ActionLink("FormasPago", "FormasPago", "FondoArqueos", routeValues: new { id = item.Id }, htmlAttributes: null)
        </td>
    </tr>
}

</table>
