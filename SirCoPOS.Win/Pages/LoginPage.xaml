<Page x:Class="SirCoPOS.Win.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SirCoPOS.Win.Pages"
      mc:Ignorable="d" 
      xmlns:v="clr-namespace:SirCoPOS.Win.Views"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <v:LoginView x:Name="loginView" Foreground="Black">
            <v:LoginView.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF000E4B"/>
                    <GradientStop Color="#FF1E3C72" Offset="1"/>
                </LinearGradientBrush>
            </v:LoginView.Background>
        </v:LoginView>
    </Grid>
</Page>
